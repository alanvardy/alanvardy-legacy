<% provide(:title, "Blog") %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user %>
</p>

<% if session[:current_user] %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Delete', destroy_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>
